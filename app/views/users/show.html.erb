<div class="card col-8 mt-4 mx-auto">
                <div class="card-content">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-12">
                        <div class="row">
                          <div class="col-12 col-sm-3 text-center mb-1 mb-sm-0">
                            <%= image_tag @user.avatar, class: "rounded",
                              alt: "group image", height: "120", width: "120" %>
                          </div>
                          <div class="col-12 col-sm-9">
                            
                              <h5 class="card-title"><%= @user.first_name%> <%= @user.last_name  %></h5>
                          
                                         
                                <p>
                                  <ul class="list-unstyled">
                                   <li><i class="bx bx-envelope mb-1 mr-50"></i><%= @user.email %></li>
                                    <li><i class="bx bx-time mb-1 mr-50"></i><%= day_and_time(@user) %></li>
                                  </ul>
                                </p>
                              
                                <div class="btn-group float-right" role="group">
                                  <%= link_to "Back", :back, class: "btn" %>
                                  <%= link_to "Edit", edit_user_registration_path, class:"btn" %> 
                                  <%= link_to "Delete account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %>
                                </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>