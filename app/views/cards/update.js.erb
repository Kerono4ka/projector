<% unless @card.errors.any? %>
  $(this).on("ajax:success", function() {
    $(".kanban-item[data-card-id=\'" + "<%= @card.id %>" + "\']").parent().html("<%= j render @card %>");
  });
<% end %>

$(".flashes").empty()
             .append("<%= j render 'shared/flash' %>")
             .delay( 5000 )
             .fadeOut( 3000 );
