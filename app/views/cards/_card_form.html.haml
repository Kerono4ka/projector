  -# = render "shared/errors"
  .form-group
    = f.label :title, class: "text-bold-600"
    = f.text_field :title, class: "form-control add-new-item", required: "", placeholder: "Enter title"
  .form-group
    = f.label :body, class: "text-bold-600"
    = f.text_area :body, class: "form-control add-new-item", autofocus: "", rows: "2", placeholder: "Your Text"
  
  = f.submit "Submit", class: "btn btn-primary btn-sm mr-50"
