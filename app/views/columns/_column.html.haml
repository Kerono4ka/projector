.kanban-board{"data-id" => "kanban-board-#{(column.id)}", "data-order" => "#{(column.id)}"}
  %span.badge.badge-pill.badge-danger.badge-up #{column.position}
  %header.kanban-board-header
    .kanban-title-board.line-ellipsis{:contenteditable => "true"}= column.name
    %button.kanban-title-button.btn.btn-default.btn-xs
      + Add New Item
    .dropdown
      #dropdownMenuButton.dropdown-toggle.cursor-pointer{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"}
        %i.bx.bx-dots-vertical-rounded
      .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenuButton"}
        = link_to board_column_path(@board, column.id),         |
          remote: true,                                         |
          method: :delete,                                      |
          class: "kanban-delete dropdown-item kanban-delete" do |
          %i.bx.bx-trash.mr-50>
          Delete
  %main.kanban-drag
  %footer
